<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:background="@android:color/darker_gray"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:background="#232323"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/diag_contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COntact Name"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="90dp"
            >
        </TextView>
        <TextView
            android:id="@+id/diag_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            >
        </TextView>

        <Button
            android:id="@+id/button_diag_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_call_black"
            android:background="@android:color/white"
            android:text="Call"
            android:layout_marginTop="10dp"
            android:layout_gravity="start">
        </Button>

        <Button
            android:id="@+id/button_diag_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_message_black"
            android:background="@android:color/white"
            android:text="Message"
            android:layout_gravity="start">
        </Button>
    </LinearLayout>

    <ImageView
        android:id="@+id/diag_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher_round"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        >

    </ImageView>

</RelativeLayout>